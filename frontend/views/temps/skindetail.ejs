<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../components/head') %>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../public/css/skindetail.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
        <link rel="stylesheet" href="../../public/css/caroussel.css">
    </head>
    <body>
        <%- include('../components/header') %>

        <main>
            <div class="container">
                <div class="swiper-container">
                    <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2">
                        <div class="swiper-wrapper">
                          <% image.forEach(function(image){ %>
                            <div class="swiper-slide">
                              <img src="http://localhost:4000/public/img<%= image.path %>" alt="<%= image.alt %>">
                            </div>
                              <% }); %>
                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                      </div>
                      <div thumbsSlider="" class="swiper mySwiper">
                        <div class="swiper-wrapper">
                          <% image.forEach(function(image){ %>
                            <div class="swiper-slide">
                              <img src="http://localhost:4000/public/img<%= image.path %>" alt="<%= image.alt %>">
                            </div>
                              <% }); %>
                        </div>
                      </div>
                </div>
                <div class="ctn-description">
                    <div class="name-product">
                      <p><%= skin.name_skin %></p>
                    </div>
                    <div class="description"><p><%= skin.description_skin %></p></div>
                      <div class="ctn-icones">
                        <% icone.forEach(function(icone){ %>
                          <img src="http://localhost:4000/public/icone/<%= icone.path %>" alt="<%= icone.alt %>">
                          <div class="space-icone"></div>
                        <% })%>
                      </div>
                    
                    <div class="price">
                      <div class="txt_price">Price</div>
                      <div class="nb_price"><p><%= skin.prix %></p></div>
                    </div>

                    <button class="btn-cart" id="ajout-panier">ajouter au panier</button>
                </div>
            </div>
            <div class="ctn-suggest">
                <!-- <%- include('../components/suggest') %> -->
            </div>
        </main>

        <footer>

        </footer>

        <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
        <script src="../../public/js/caroussel.js"></script>
        <script src="../../public/js/panier.js"></script>

    </body>
</html>
